{
  "restartable": "rs",
  "ignore": [
    ".git",
    ".next",
    "node_modules/",
    "dist/",
    "coverage/"
  ],
  "watch": [
    "package.json",
    "tsconfig.json",
    "nodemon.json",
    "prisma/",
    "src/"
  ],
  "execMap": {
    "ts": "node -r ts-node/register"
  },
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json,ts"
}